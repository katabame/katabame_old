@import init

// mobile: width 720pxâ†“

::-webkit-scrollbar
	display: none

@keyframes updown
	50%
		transform: translate(0, 2rem)
.updown
	animation-name: updown
	animation-duration: 2s
	animation-iteration-count: infinite
	transition-timing-function: ease-in
	cursor: default

#fsvs-body
	width: 100%
	height: 100%
	display: flex
	flex-wrap: wrap
#fsvs-pagination
	margin: 0
	padding: 8px 4px
	position: fixed
	height: auto
	right: -100px
	top: 50%
	z-index: 999
	width: 32px
	li
		list-style: none
		width: 25px
		height: 25px
		line-height: 25px
		text-align: center
		margin: 0 0 2px 0
		cursor: pointer
		&.active:nth-child(2n-1)
			&>span
				background-color: #212121
		&.active:nth-child(2n)
			&>span
				background-color: #f5f5f5

for i in 1..5
	.active-slide-{i}
		&>*>li>span
			border-radius: 100%
			width: 22px
			height: 22px
			line-height: 22px
			if (i%2 == 0)
				border: 1px solid #f5f5f5
			else
				border: 1px solid #212121
			display: block

header
	position: fixed
	width: 100%
	height: 6vh
	background-color: #212121
	padding: 0 2rem
	display: flex
	align-items: center
	z-index: 999
	a
		margin: 0 5px
		color: #f5f5f5
		&:hover
			color: #E91E63

	.right
		margin-left: auto

.icon
	width: 20rem
	border-radius: 50%
	background-color: #212121
h1, h3
	font-weight: lighter
	&>span
		color: #E91E63


content
	width: 100%
	//min-height: 103%
	height: 100%
	font-size: 1.6rem
	padding: 5rem 3rem
	padding-top: 9rem
	text-align: center
	&>.title
		&:after
			text-align: center
			content: " "
			display: inline-block
			width: 30rem
			border-bottom: 1px solid #212121
	&>.body
		margin-top: 5rem
		display: flex
		flex-wrap: wrap
		justify-content: center
		&>.half
			width: 49%
			height: 100%
			text-align: left
			margin: .5%
		&>card
			width: 28.3rem
			height: 40rem
			border-radius: 5px
			background-color: #fff
			box-shadow: 0 2px 5px #ccc
			margin: 1rem 1rem
			padding: 3rem 0
			&>img
				width: 10rem
				height: 10rem
				border-radius: 50%
				margin-bottom: 1rem
			&>.desc
				margin: 3rem 0
				padding: 0 3rem
				word-wrap: break-word
				//text-align: left
			&>.button
				bottom: 0
				color: #f5f5f5
				display: inline
				padding: .5rem 1rem
				cursor: pointer
				white-space: nowrap
				vender user-select none
				margin: .3rem .5rem
				background-color: #212121
				transition: .3s
				&:hover
					color: #f5f5f5
					background-color: #E91E63

	// Black Theme
	&.black
		background-color: #424242
		color: #f5f5f5
